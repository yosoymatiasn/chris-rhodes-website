    role: 'Wayne Wright',
    company: 'Playhouse on Park',
  },
  {
    production: 'BANDSTAND',
    role: 'Wayne Wright',
    company: 'Summer Lyric Theatre',
  },
  {
    production: 'BANDSTAND',
    role: 'Ensemble / Wayne Wright US',
    company: 'Texas A&M',
  },
  {
    production: 'CABARET TOUR',
    role: 'Victor / Trombone / Cliff US',
    company: 'B.T. McNicholl',
  },
  {
    production: 'ONE MINUTE PLAY FEST.',
    role: 'Ensemble',
    company: 'Nathaniel P. Claridad',
  },
  {
